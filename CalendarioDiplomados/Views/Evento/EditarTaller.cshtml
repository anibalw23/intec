@model CalendarioDiplomados.Models.Evento


<h2>Editar Taller de Evento</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.fechaIncicio)
        @Html.HiddenFor(model => model.fechaFin)
        @Html.HiddenFor(model => model.CalendarioID, new { @Value = ViewBag.CalendarioID })
        @Html.HiddenFor(model => model.isDomingo)
        @Html.HiddenFor(model => model.isLunes)
        @Html.HiddenFor(model => model.isMartes)
        @Html.HiddenFor(model => model.isMiercoles)
        @Html.HiddenFor(model => model.isJueves)
        @Html.HiddenFor(model => model.isViernes)
        @Html.HiddenFor(model => model.isSabado)
        <div class="form-group">
            @Html.LabelFor(model => model.TallerID, "TallerID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TallerID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TallerID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FacilitadorID, "FacilitadorID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FacilitadorID", null,String.Empty ,htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FacilitadorID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ChoferID, "ChoferID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ChoferID", null, String.Empty, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ChoferID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

