@model CalendarioDiplomados.Models.Calendario

@{
    ViewBag.Title = "Edit";
}

<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.11.3/themes/smoothness/jquery-ui.css">

<h2>Modificar Fechas del Calendario</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.GrupoID, new { @Value = ViewBag.grupoID })

        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Label("Nombre Calendario", new { @class = "" })
            </div>  
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">  
            <div class="control-label col-md-2">
                @Html.Label("Fecha de Inicio", new { @class = "" })
            </div>           
            <div class="col-md-10">
                <input name="fechaInicio" id="fechaInicioDate"  class="form-control" value="@Model.fechaInicio.ToString("dd-MMMM-yyyy")" />
                @Html.ValidationMessageFor(model => model.fechaInicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Label("Fecha Final", new { @class = "" })
            </div>    
            <div class="col-md-10">
                <input name="fechaFin" id="fechaFinDate"  class="form-control" value="@Model.fechaFin.ToString("dd-MMMM-yyyy")" />
                @Html.ValidationMessageFor(model => model.fechaFin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    <script type="text/javascript">
    $(function () {
        $("#fechaInicioDate").datepicker({ dateFormat: 'dd-mm-yy' });
        $("#fechaFinDate").datepicker({ dateFormat: 'dd-mm-yy' });
    });
    </script>

}
