@model CalendarioDiplomados.Models.Calendario

@{
    ViewBag.Title = "Create";
}
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.11.3/themes/smoothness/jquery-ui.css">

<h2>Crear Nuevo Calendario</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GrupoID, new { @Value = ViewBag.grupoID })
        <div class="form-group">
            <div >
                @Html.EditorFor(model => model.nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.Label("Fecha de Inicio:", new { @class = "control-label col-md-2" })*@            
            <div class="col-md-10">
                @Html.EditorFor(model => model.fechaInicio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fechaInicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.Label("Fecha Fin:", new { @class = "control-label col-md-2" })*@            
            <div class="col-md-10">
                @Html.EditorFor(model => model.fechaFin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fechaFin, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group" id="eventos">
            <h3>Eventos</h3>
            <div id="checkboxes">
                <h4> Dias que se repite:</h4>
                <label for="one"><input name="diaCheckbox" type="checkbox" id="lunes" value="1" />Lunes</label>
                <label for="two"><input name ="diaCheckbox" type="checkbox" id="martes" value="2" />Martes </label>
                <label for="three"><input name="diaCheckbox" type="checkbox" id="miercoles" value="3" />Miércoles</label>
                <label for="three"><input name="diaCheckbox" type="checkbox" id="jueves" value="4" />Jueves</label>
                <label for="three"><input name="diaCheckbox" type="checkbox" id="viernes" value="5" />Viernes</label>
                <label for="three"><input name="diaCheckbox" type="checkbox" id="sabado" value="6" />Sábado</label>
                <label for="three"><input name="diaCheckbox" type="checkbox" id="domingo" value="7" />Domingo</label>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    <script type="text/javascript">
    $(function () {
        $("#fechaInicio").datepicker();
        $("#fechaFin").datepicker();
    });
    </script>

}
