@model CalendarioDiplomados.Models.Taller

@{
    ViewBag.Title = "Edit";
}

<h2>Asignar Taller: @Model.nombre a Facilitador</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.nombre)
        @Html.HiddenFor(model => model.ModuloID)
        @Html.HiddenFor(model => model.orden)

        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Label("Facilitador", new { @class = "" })
            </div>  
            <div class="col-md-10">
                @Html.DropDownList("FacilitadorID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FacilitadorID, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

