@model CalendarioDiplomados.Models.Taller

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Taller</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.orden)
        @Html.HiddenFor(model => model.FacilitadorID)
        @Html.Hidden("diplomadoId", new { Value = ViewBag.diplomadoID })
        
        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Label("Nombre", new { @class = "" })
            </div>  
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Label("Número de Días", new { @class = "" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.cantidadDias, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cantidadDias, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Label("Módulo", new { @class = "" })
            </div>  
            <div class="col-md-10">
                @Html.DropDownList("ModuloID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ModuloID, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
