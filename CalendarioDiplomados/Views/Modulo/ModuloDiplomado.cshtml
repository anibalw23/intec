@model IEnumerable<CalendarioDiplomados.Models.Modulo>

@if (User.IsInRole("Administrador"))
{
    <a href="@Url.Action("Create", "Modulo", new { diplomadoID = ViewBag.diplomadoID })" class="btn btn-info">
        Crear Módulo
    </a>
}

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @if (User.IsInRole("Administrador"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID, diplomadoID = ViewBag.diplomadoID }) <span>|</span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                }


            </td>
        </tr>
    }

</table>

